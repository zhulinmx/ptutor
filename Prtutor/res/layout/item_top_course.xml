<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/list_tv_top_num"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="1"
            android:textColor="@color/orange"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/list_iv_top"
            android:layout_width="130dp"
            android:layout_height="60dip"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_weight="0.08"
            android:src="@drawable/cursor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/list_tv_top_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:text="课程名称"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/list_tv_top_enrollment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="10人已报名"
                android:textColor="@color/gray"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/list_tv_top_tutor"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:text="chris"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_toRightOf="@+id/list_tv_top_tutor"
                    android:background="@drawable/tutor_toend" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>