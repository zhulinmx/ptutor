<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/order_detail"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/orange" >

        <ImageButton
            android:id="@+id/order_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/icon_back" />

        <com.prtutor.android.view.HandyTextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认订单"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/order_name"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/iv_order_name"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="上课人"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <com.prtutor.android.view.HandyTextView
                android:id="@+id/tv_order_name"
                android:layout_marginLeft="20dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/title_bg"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="280dip"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#E2E2E2" />

        <LinearLayout
            android:id="@+id/order_course"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/iv_order_course"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="课程"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <com.prtutor.android.view.HandyTextView
                android:id="@+id/tv_order_course"
                android:layout_marginLeft="20dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/title_bg"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="280dip"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#E2E2E2" />

        <LinearLayout
            android:id="@+id/order_price"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/iv_order_price"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="课程总价"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <com.prtutor.android.view.HandyTextView
                android:id="@+id/tv_order_price"
                android:layout_marginLeft="20dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/title_bg"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_order"
            android:layout_width="200dp"
            android:layout_height="30dip"
            android:layout_marginTop="20dip"
            android:layout_weight="0.38"
            android:background="@color/orange"
            android:layout_gravity="center"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>